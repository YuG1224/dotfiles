{
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  // アノテーションコメントのハイライト設定
  // 基本5種（*, ?, !, //, todo）に加えて、4種（bug, hack, fixme, xxx）を設定しておく
  "better-comments.tags": [
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#98C379",
      "italic": false,
      "strikethrough": false,
      "tag": "*",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#3498DB",
      "italic": false,
      "strikethrough": false,
      "tag": "?",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#FF2D00",
      "italic": false,
      "strikethrough": false,
      "tag": "!",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#474747",
      "italic": false,
      "strikethrough": true,
      "tag": "//",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#FF8C00",
      "italic": false,
      "strikethrough": false,
      "tag": "todo",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#FF8C00",
      "italic": false,
      "strikethrough": false,
      "tag": "bug",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#FF8C00",
      "italic": false,
      "strikethrough": false,
      "tag": "fixme",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#FF2D00",
      "italic": false,
      "strikethrough": false,
      "tag": "hack",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#FF2D00",
      "italic": false,
      "strikethrough": false,
      "tag": "xxx",
      "underline": false
    }
  ],
  "cSpell.userWords": [
    "abortable",
    "connpass",
    "csstype",
    "deno",
    "denoland",
    "dontshownewversionmessage",
    "dotfiles",
    "esbenp",
    "githubactions",
    "hrbrain",
    "lefthook",
    "liveshare",
    "menlo",
    "plemoljp",
    "polacode",
    "qiita",
    "unplugin",
    "vetur",
    "vsicons",
    "Yamaguchi",
    "Yuji",
    "Zenn"
  ],
  "deno.codeLens.implementations": true,
  "deno.codeLens.references": true,
  "deno.codeLens.referencesAllFunctions": true,
  "deno.enable": true,
  "deno.inlayHints.functionLikeReturnTypes.enabled": false,
  "deno.inlayHints.parameterNames.enabled": "none",
  "deno.inlayHints.variableTypes.enabled": false,
  "deno.lint": true,
  "deno.suggest.imports.hosts": {
    "https://deno.land": true
  },
  "deno.unstable": true,
  "diffEditor.maxComputationTime": 0,
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "PlemolJP Console, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.allowedCharacters": {
    "〇": true
  },
  "editor.unicodeHighlight.nonBasicASCII": false,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "gitConfigUser.profiles": [
    {
      "email": "yuji.yamaguchi24@gmail.com",
      "label": "Yuji Yamaguchi",
      "selected": true,
      "userName": "Yuji Yamaguchi"
    }
  ],
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": true,
    "scminput": false,
    "yaml": true
  },
  "go.toolsManagement.autoUpdate": true,
  "html.format.endWithNewline": true,
  "i18n-ally.annotations": false,
  "i18n-ally.displayLanguage": "ja",
  "i18n-ally.localesPaths": ["src/locales"],
  "i18n-ally.sourceLanguage": "ja",
  "japanese-proofreading.maxNumberOfProblems": 500,
  "javascript.preferGoToSourceDefinition": false,
  "liveshare.presence": true,
  "npm.keybindingsChangedWarningShown": true,
  // settings.jsonに書いても効かないので、別途GUIから設定する
  // "prettier.prettierPath": "/PATH/TO/dotfiles/node_modules/prettier/index.cjs",
  "prettier.resolveGlobalModules": true,
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "prettier.trailingComma": "all",
  "reactSnippets.settings.typescript": false,
  // アノテーションコメントの一覧ツリー表示、ツリー表示させたいタグがあれば追加する
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "XXX"],
  "todo-tree.highlights.enabled": false,
  "typescript.preferGoToSourceDefinition": false,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.validate.enable": false,
  "vsicons.dontShowNewVersionMessage": true,
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "bearded-icons",
  "workbench.startupEditor": "none"
}
